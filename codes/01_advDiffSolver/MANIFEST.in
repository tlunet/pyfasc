# MANIFEST.in - Package data inclusion rules
# This file tells setuptools which additional files to include in the package

# Include documentation
include README.md
include LICENSE

# Include configuration files
include config/*.txt
include config/*.yaml
include config/*.yml

# Include adapter documentation
include adapters/README.md
include adapters/*.yaml

# Include test configurations
recursive-include tests *.txt
recursive-include tests *.yaml

# Include examples
include adapters/custom_adapters_example.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune gif_frames
prune outputs
prune results
